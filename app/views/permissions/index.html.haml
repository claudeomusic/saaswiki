%div.row.text-center
  %div.col-md-3
  %div.col-md-6
    %h1 Shared On #{@wiki.subject} Wiki
    %table.table
      %theaders
        %tr
          %td Username
          %td Role
          %td Add/Remove?
      %tbody
        %tr
          %td 
            =@author.username
          %td Author
          %td N/A
        -if @collaborators
          -@collaborators.each do |collaborator|
            %tr
            %td 
              =collaborator.username
            %td Collaborator
            %td 
              = link_to "Remove", wiki_remove_collaborator_path(:wiki => @wiki, :user => collaborator), method: :post
        -@excluded_users.each do |user|
          %tr
          %td
            =user.username
          %td User
          %td 
            = link_to "Add", wiki_add_user_path(:wiki => @wiki, :user => user),  method: :post
       